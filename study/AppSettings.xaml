<Window x:Class="Study.AppSettings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Study"
        mc:Ignorable="d"
        Title="AppSettings" Height="400" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="1" Grid.Column="1">Выберите тему приложения:</Label>

        <StackPanel Grid.Row="1" Grid.Column="1" Margin="10,10,1,1" Orientation="Horizontal">
            <Button Click="SwitchDarkTheme_Button_Click" Padding="5" HorizontalAlignment="Left" Margin="20" Content="Dark" Name = "SwitchDarkTheme_Button"/>
            <Button Click="SwitchLightTheme_Button_Click" Padding="5" HorizontalAlignment="Right" Content="Light" Name = "SwitchLightTheme_Button"/>
        </StackPanel>

    </Grid>
</Window>
