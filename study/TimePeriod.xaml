<UserControl x:Class="Study.TimePeriod"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Study"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Label Name="StartTime" Margin="-5"  Style="{StaticResource Standart}" HorizontalAlignment="Left">
            начало
        </Label>
        <Label Name="EndTime" Margin="-5"  Style="{StaticResource Standart}" HorizontalAlignment="Right">
            конец
        </Label>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Label Name="Subject" Margin="-5"  Style="{StaticResource Standart}">
                пара
            </Label>
            <Label Name="Teacher" Grid.Row="1" Margin="-5"  Style="{StaticResource Standart}">
                препод
            </Label>
        </Grid>
    </Grid>
</UserControl>
